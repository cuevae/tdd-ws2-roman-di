<?xml version="1.0"?>
<phpunit bootstrap="../src/bootstrap.php" verbose="true">
    <testsuites>
        <testsuite name="unit">
            <directory>../src/Kurtgeiger/Katas/RomanNumerals/*/*/Tests/Unit</directory>
        </testsuite>
        <testsuite name="integration">
            <directory>../src/Kurtgeiger/Katas/RomanNumerals/Tests/Integration</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory>../vendor</directory>
        </blacklist>
        <whitelist>
            <directory suffix=".php">../src/</directory>
            <exclude>
                <directory suffix=".php">../src/Kurtgeiger/Katas/RomanNumerals/Tests</directory>
                <directory suffix=".php">../src/Kurtgeiger/Katas/RomanNumerals/*/*/Tests</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="../build/logs/coverage.xml"/>
        <log type="coverage-html" target="../build/logs/report" lowUpperBound="35"
             highLowerBound="70"/>
    </logging>
</phpunit>